<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.cxdai.console.maintain.portal.mapper.BaseNewsNoticeMapper">
	
	<!-- NewsNotice结果集 -->
	<resultMap type="com.cxdai.console.maintain.portal.entity.NewsNotice" id="newsNoticeResultMap">
		<id property="id" column="id" />
		<result property="type" 				column="TYPE" />
		<result property="status" 				column="STATUS" />
		<result property="hits" 				column="HITS" />
		<result property="source" 				column="SOURCE" />
		<result property="title"	    		column="TITLE" />
		<result property="author"  				column="AUTHOR" />
		<result property="context" 				column="CONTEXT" />
		<result property="addtime" 				column="ADDTIME" />
		<result property="addip" 				column="ADDIP" />
		<result property="updatetime" 			column="UPDATETIME" />
		<result property="upip" 				column="UPIP" />
	</resultMap>
	
	<!--新闻公告类基本列 -->
	<sql id="newsNoticeBaseColumn">
		n.ID, 
		n.TYPE, 
		n.STATUS, 
		n.HITS, 
		n.SOURCE, 
		n.TITLE, 
		n.AUTHOR, 
		n.CONTEXT, 
		n.ADDTIME, 
		n.ADDIP, 
		n.UPDATETIME, 
		n.UPIP
	</sql>
	
	<!-- 插入记录，返回主键 -->
	<insert id="insertEntity" parameterType="com.cxdai.console.maintain.portal.entity.NewsNotice">
		INSERT INTO rocky_news_notice 
		(TYPE, 	STATUS, 	HITS, 	SOURCE, 	TITLE, 		AUTHOR, 	CONTEXT, 	ADDTIME, 
		 ADDIP, 	UPDATETIME, 	UPIP)
		VALUES
		(#{type}, #{status}, #{hits},	#{source},	#{title},	#{author},   #{context}, #{addtime}, 
		#{addip}, 	#{updatetime},	#{upip})
		
 		 <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">  
      	    SELECT LAST_INSERT_ID() AS ID    
   		 </selectKey>
	</insert>
	
  	<!-- 根据ID查询 -->
	<select id="queryById" parameterType="java.lang.Integer" resultMap="newsNoticeResultMap" >
		select 	
		   <include refid="newsNoticeBaseColumn"/>
		from
			rocky_news_notice n
		where 1=1
		and n.id=#{id}
  	</select>
	
  <!-- 更新新闻公告类 -->
  <update id="updateEntity" parameterType="com.cxdai.console.maintain.portal.entity.NewsNotice" >
    update rocky_news_notice
    <set >
      <if test="type != null" >
        TYPE = #{type,jdbcType=INTEGER},
      </if>
      <if test="status != null" >
        STATUS = #{status,jdbcType=INTEGER},
      </if>
      <if test="hits != null" >
        HITS = #{hits,jdbcType=INTEGER},
      </if>
      <if test="source != null" >
        SOURCE = #{source,jdbcType=VARCHAR},
      </if>
      <if test="title != null" >
        TITLE = #{title,jdbcType=VARCHAR},
      </if>
      <if test="author != null" >
        AUTHOR = #{author,jdbcType=VARCHAR},
      </if>
      <if test="context != null" >
        CONTEXT = #{context,jdbcType=VARCHAR},
      </if>
      <if test="addtime != null" >
        ADDTIME = #{addtime,jdbcType=VARCHAR},
      </if>
      <if test="addip != null" >
        ADDIP = #{addip,jdbcType=VARCHAR},
      </if>
      <if test="updatetime != null" >
        UPDATETIME = #{updatetime,jdbcType=VARCHAR},
      </if>
      <if test="upip != null" >
        UPIP = #{upip,jdbcType=VARCHAR},
      </if>                         
    </set>
    where ID = #{id}
  </update>
  	
</mapper>  