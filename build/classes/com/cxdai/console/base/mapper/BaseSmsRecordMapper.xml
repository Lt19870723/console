<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.cxdai.console.base.mapper.BaseSmsRecordMapper">
	
	<!-- 结果集 -->
	<resultMap type="com.cxdai.console.sms.vo.SmsRecord" id="smsRecordResultMap">
		<id property="id" column="id" />
		<result property="smsType" 				column="SMS_TYPE" />
		<result property="mobile" 				column="MOBILE" />
		<result property="content" 				column="CONTENT" />
		<result property="sendStatus" 			column="SEND_STATUS" />
		<result property="invokingStatus"	    column="INVOKING_STATUS" />
		<result property="taskid"  				column="TASKID" />
		<result property="addtime"  			column="ADDTIME" />
		<result property="addip"  				column="ADDIP" />
		<result property="lastmodifytime"  		column="LASTMODIFYTIME" />
		<result property="vendorType"  			column="VENDOR_TYPE" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="smsRecordBaseColumn">
		s.ID, 
		s.SMS_TYPE, 
		s.MOBILE, 
		s.CONTENT, 
		s.SEND_STATUS, 
		s.INVOKING_STATUS,
		s.TASKID, 
		s.ADDTIME, 
		s.ADDIP,  
		s.LASTMODIFYTIME,
		s.VENDOR_TYPE
	</sql>
	
	<!-- 插入记录，返回主键 -->
	<insert id="insertEntity" parameterType="com.cxdai.console.sms.vo.SmsRecord">
		INSERT INTO rocky_sms_record
		(SMS_TYPE, 	MOBILE,	CONTENT,	SEND_STATUS,	INVOKING_STATUS,	TASKID,	ADDTIME,	ADDIP, 
		LASTMODIFYTIME,	VENDOR_TYPE,platform)
		VALUES
		(#{smsType},#{mobile},#{content},#{sendStatus},	#{invokingStatus},#{taskid},#{addtime},#{addip},
		#{lastmodifytime},#{vendorType},#{platform})
		
 		 <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">  
      	    SELECT LAST_INSERT_ID() AS ID    
   		 </selectKey>
	</insert>
	
	<!-- 查询一个手机号当天发送的短信次数 -->
	<select id="getSentNum" parameterType="String" resultType="Integer">
		select COUNT(id) from rocky_sms_record where MOBILE=#{mobile} AND ADDTIME > curdate()
	</select>
  	
</mapper>  