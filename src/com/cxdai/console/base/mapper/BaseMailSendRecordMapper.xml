<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.cxdai.console.base.mapper.BaseMailSendRecordMapper">
	
	<!-- MailSendRecord结果集 -->
	<resultMap type="com.cxdai.console.base.entity.MailSendRecord" id="mailSendRecordResultMap">
		<id property="id" column="id" />
		<result property="type" 				column="type" />
		<result property="typeId" 				column="type_id" />
		<result property="status" 				column="status" />
		<result property="sendNum" 				column="send_num" />
		<result property="sendTime"	    		column="send_time" />
		<result property="addtime"  			column="ADDTIME" />
	</resultMap>
	
	<!--关联人类基本列 -->
	<sql id="mailSendRecordBaseColumn">
		r.ID, 
		r.type, 
		r.type_id, 
		r.status, 
		r.send_num, 
		r.send_time, 
		r.ADDTIME
	</sql>
	
	<!-- 插入记录，返回主键 -->
	<insert id="insertEntity" parameterType="com.cxdai.console.base.entity.MailSendRecord">
		INSERT INTO rocky_mail_send_record 
		(type, type_id, status, send_num, send_time, ADDTIME, EMAIL, REMARK)
		VALUES
		(#{type}, #{typeId}, #{status}, #{sendNum}, #{sendTime}, #{addtime},#{email},#{remark})
 		 <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">  
      	    SELECT LAST_INSERT_ID() AS ID    
   		 </selectKey>
	</insert>
	
  	<!-- 根据ID查询 -->
	<select id="queryById" parameterType="java.lang.Integer" resultMap="mailSendRecordResultMap" >
		select 	
		   <include refid="mailSendRecordBaseColumn"/>
		from
			rocky_mail_send_record r
		where 1=1
		and r.id=#{id}
  	</select>
	
  <!-- 更新记录 -->
  <update id="updateEntity" parameterType="com.cxdai.console.base.entity.MailSendRecord" >
    update rocky_mail_send_record
    <set >
      <if test="type != null" >
        type = #{type,jdbcType=INTEGER},
      </if>
      <if test="typeId != null" >
        type_id = #{typeId,jdbcType=DATE},
      </if>
      <if test="status != null" >
        status = #{status,jdbcType=INTEGER},
      </if>
      <if test="sendNum != null" >
        send_num = #{sendNum,jdbcType=INTEGER},
      </if>
      <if test="sendTime != null" >
        send_time = #{sendTime,jdbcType=DATE},
      </if>
      <if test="addtime != null" >
        ADDTIME = #{addtime,jdbcType=DATE},
      </if>
    </set>
    where ID = #{id}
  </update>
  	
</mapper>  